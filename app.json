{
  "expo": {
    "name": "SarsatJRXApp",
    "slug": "SarsatJRXApp",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "sarsatjrxapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "imageWidth": 1024,
      "resizeMode": "cover",
      "backgroundColor": "#001a1a"
    },    
    "ios": {
      "splash": {
        "backgroundColor": "#001a1a"
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.fredzo.SarsatJRXApp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show beacon positions on the map.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "UIBackgroundModes": ["audio", "fetch", "processing"]
      }
    },
    "android": {
      "splash": {
        "backgroundColor": "#001a1a"
      },
      "adaptiveIcon": {
        "backgroundColor": "#001a1a",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.fredzo.SarsatJRXApp",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "POST_NOTIFICATIONS"
      ],
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "./withCleartextTraffic.js",
      "expo-router",
      [
      "expo-asset",
      {
        "assets": [ "./assets/audios/counth.mp3",
                    "./assets/audios/countl.mp3",
                    "./assets/audios/filtered.mp3",
                    "./assets/audios/invalid.mp3",
                    "./assets/audios/ko.mp3",
                    "./assets/audios/ok.mp3",
                    "./assets/audios/touch.mp3"
                  ]
      }
      ],
      [
      "expo-camera",
      {
        "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes."
      }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "92cffe8b-4895-4dc2-bcc3-36a13fb63351"
      }
    },
    "owner": "fredzo",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/92cffe8b-4895-4dc2-bcc3-36a13fb63351"
    }
  }
}
